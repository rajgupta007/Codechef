#include <bits/stdc++.h>
#define ll long long int
#define nl "\n"
using namespace std;
int main() {
	ll tc;
	cin>>tc;
	while(tc--)
	{
	   ll n;
	   cin>>n;
	   ll temp,count=0;
	   for(int i=0;i<n;i++)
	   {
	         cin>>temp;
	         if(temp%2!=0){count++;}
	   }
	   if(count==0 || count==1){cout<<0<<nl;continue;}
	   if(count%2!=0){count=count-1;}
	   cout<<count/2<<nl;
	}
	return 0;
}
